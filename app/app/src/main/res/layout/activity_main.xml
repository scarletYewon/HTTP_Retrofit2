<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청보내기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get요청"
        app:layout_constraintBottom_toTopOf="@id/btn_post_path"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_post_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="path테스트"
        app:layout_constraintBottom_toTopOf="@id/btn_post_parameter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get" />
    <Button
        android:id="@+id/btn_post_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parameter테스트"
        app:layout_constraintBottom_toTopOf="@id/btn_post_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_post_path" />
    <Button
        android:id="@+id/btn_post_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="header테스트"
        app:layout_constraintBottom_toTopOf="@id/btn_post_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_post_parameter" />
    <Button
        android:id="@+id/btn_post_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="body테스트"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_post_header" />
</androidx.constraintlayout.widget.ConstraintLayout>